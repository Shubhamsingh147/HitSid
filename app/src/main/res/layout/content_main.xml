<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:background="#1ABC9C">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kiss"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"/>
        <ImageView android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/kissf"
            android:layout_gravity="center"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sid"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="left"
            android:layout_weight="0.3"/>
    </LinearLayout>

    <TextView android:text="Kiss sid whenever his photo appears and next when others! Just touch on his lips! not with your lips though!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_weight="0.1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Touch image"
        android:layout_weight="0.3"
        android:id="@+id/score"
        android:layout_below="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Max:"
        android:layout_weight="0.3"
        android:id="@+id/highest"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30 secs"
        android:gravity="right"
        android:layout_weight="0.4"
        android:id="@+id/time"
        android:layout_below="@+id/textView" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:visibility="gone"
        android:src="@drawable/notbad"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/sid1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttons"
        android:layout_weight="0.2" >
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Restart"
            android:background="#1ABC9C"
            android:visibility="gone"
            android:id="@+id/button"
            android:layout_weight="0.5"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Next ->"
            android:background="#1ABC9C"
            android:visibility="visible"
            android:id="@+id/next"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Touch only Sids' lips as many times as you can in 30 secs!"
        android:id="@+id/comment"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/buttons"
        android:layout_weight="0.1"/>

</LinearLayout>
